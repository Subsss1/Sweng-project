---
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Dummy Website - {title}</title>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    font-size: 16px; /* REM size */
    font-family: system-ui, sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
  }

  main {
    padding: 0 max(5%, 1.5rem);
  }
</style>
